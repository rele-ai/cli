{
    "type": "object",
    "required": [
        "type",
        "selector",
        "key"
    ],
    "definitions": {
        "next": {
            "type": "object",
            "default": {},
            "required": [
                "selector"
            ],
            "properties": {
                "selector": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "type",
                            "data"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "workflow",
                                    "operation"
                                ]
                            },
                            "data": {
                                "type": "object",
                                "required": [
                                    "workflow",
                                    "next"
                                ],
                                "properties": {
                                    "workflow": {
                                        "type": "string"
                                    },
                                    "next": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "entry_condition": {
            "type": "object",
            "properties": {
                "operation_type": {
                    "type": "string",
                    "enum": [
                        "continue_session",
                        "drop_session"
                    ]
                },
                "format_function": {
                    "type": "array",
                    "minimum": 1,
                    "items": {
                        "type": "object",
                        "required": [],
                        "properties": {
                            "operation": {
                                "type": "string",
                                "enum": [
                                    "decrement",
                                    "increment",
                                    "encode_base64",
                                    "get_length"
                                ]
                            },
                            "output": {
                                "type": "string",
                                "pattern": "^[a-z0-9-_:]+$"
                            },
                            "value": {
                                "$ref": "#/definitions/payload_item"
                            },
                            "args": {
                                "type": "object"
                            }
                        }
                    }
                },
                "redis_functions": {
                    "type": "array",
                    "minimum": 1,
                    "items": {
                        "type": "object",
                        "required": [],
                        "properties": {
                            "operation": {
                                "type": "string",
                                "enum": [
                                    "set_field",
                                    "delete_key"
                                ]
                            },
                            "path": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "hash_map",
                                    "array",
                                    "array_item",
                                    "hash_array"
                                ]
                            },
                            "value": {
                                "$ref": "#/definitions/payload_item"
                            }
                        }
                    }
                }
            }
        },
        "payload_item": {
            "type": "object",
            "required": [
                "type",
                "data"
            ],
            "properties": {
                "vars": {
                    "type": "object",
                    "patternProperties": {
                        ".+": {
                            "$ref": "#/definitions/payload_item"
                        }
                    }
                },
                "data": {},
                "rkey_type": {
                    "type": "string",
                    "enum": [
                        "hash_map",
                        "array",
                        "array_item",
                        "hash_array"
                    ]
                },
                "next": {
                    "$ref": "#/definitions/next"
                },
                "match_operation": {
                    "type": "string",
                    "enum": [
                        "==",
                        "!=",
                        "<",
                        ">",
                        "<=",
                        ">=",
                        "in"
                    ]
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "redis",
                        "raw",
                        "get_by_lang",
                        "request",
                        "struct"
                    ]
                },
                "default": {
                    "$ref": "#/definitions/payload_item"
                }
            }
        }
    },
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "Operation"
            ]
        },
        "selector": {
            "type": "object",
            "required": [
                "app",
                "app_action",
                "workflow"
            ],
            "properties": {
                "app": {
                    "type": "string",
                    "pattern": "^[a-z0-9_]+$"
                },
                "app_action": {
                    "type": "string",
                    "pattern": "^[a-z0-9_]+$"
                },
                "workflow": {
                    "type": "array",
                    "minimum": 1,
                    "items": {
                        "type": "string",
                        "pattern": "^[a-z0-9_]+$"
                    }
                }
            }
        },
        "next": {
            "$ref": "#/definitions/next"
        },
        "on_error": {
            "$ref": "#/definitions/next"
        },
        "is_root": {
            "type": "boolean",
            "default": false
        },
        "input": {},
        "output": {},
        "redis": {
            "type": "object",
            "default": {},
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "hash_map",
                        "array"
                    ]
                },
                "field": {
                    "type": "string",
                    "pattern": "^[a-z0-9-_:]+$"
                }
            }
        },
        "payload": {
            "type": "object",
            "patternProperties": {
                ".+": {
                    "$ref": "#/definitions/payload_item"
                }
            }
        },
        "key": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$"
        },
        "display_name": {
            "type": "object",
            "default": {},
            "patternProperties": {
                "^([a-z]{2})(_[a-z]{2})?$": {
                    "type": "string",
                    "pattern": "^[a-zA-Z0-9\\s-_]+$"
                }
            }
        }
    }
}