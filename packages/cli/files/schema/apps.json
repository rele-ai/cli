{
    "type": "object",
    "required": [
        "type",
        "base_url",
        "key"
    ],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "App"
            ]
        },
        "base_url": {
            "type": "string",
            "format": "url"
        },
        "tls": {
            "type": "boolean",
            "default": false
        },
        "display_name": {
            "type": "object",
            "default": {},
            "patternProperties": {
                "^([a-z]{2})(_[a-z]{2})?$": {
                    "type": "string",
                    "pattern": "^[a-zA-Z0-9\\s-_]+$"
                }
            }
        },
        "protocol": {
            "type": "string",
            "enum": [
                "grpc",
                "rest",
                "gRPC",
                "REST"
            ],
            "default": "gRPC"
        },
        "request": {
            "type": "object",
            "default": {},
            "properties": {
                "method": {
                    "type": "string",
                    "enum": [
                        "GET",
                        "HEAD",
                        "POST",
                        "PUT",
                        "DELETE",
                        "CONNECT",
                        "OPTIONS",
                        "TRACE",
                        "PATCH"
                    ]
                },
                "headers": {
                    "type": "object",
                    "default": {}
                },
                "body": {
                    "type": "object",
                    "default": {}
                },
                "query": {
                    "type": "object",
                    "default": {}
                }
            }
        },
        "key": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$"
        }
    }
}